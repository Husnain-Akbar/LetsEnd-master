@typeparam TItem
@if (List == null)
{
    @*<img src="https://media0.giphy.com/media/3oEjI6SIIHBdRxXI40/200.gif" />*@
    @if (NullTemplate != null)
    {
        @NullTemplate
    }
    else
    {
        <img src="https://media0.giphy.com/media/3oEjI6SIIHBdRxXI40/200.gif" />
    }
}

else if (List.Count == 0)
{
    @if (EmptyTemplate != null)
    {
        @EmptyTemplate
    }
    else
    {
        <text>There are no movies...</text>
    }
}
else
{
    // @onchange= "@(()=>displayButtons= !displayButtons)"
    @foreach (var element in List)
    {
        @ElementTemplate(element)
    }
}

@code {
    [Parameter] public RenderFragment NullTemplate { get; set; }
    [Parameter] public RenderFragment EmptyTemplate { get; set; }
    [Parameter] public RenderFragment<TItem> ElementTemplate { get; set; }
    [Parameter] public List<TItem> List { get; set; }


}
